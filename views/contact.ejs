<% include partials/header %>
            <div class="collapse navbar-collapse navbar-right" id="bs-nav-demo">
	         	<ul class="nav navbar-nav">
			        <li><a href="/">Home </a></li>
			        <li><a href="/projects">Projects </a></li>
                    <li><a href="/about">About </a></li>
                    <li class="active"><a href="/contact">Contact Me <span class="sr-only">(current)</span></a></li>
                </ul>
            </div>
        </div>
	</nav>

	<div class="container main-content">
		<div class="row">
			<div class="col-md-6 visible-md-block visible-lg-block">
				<img class="img-responsive" id="contact-me-img" src="./images/contact-me.png" alt="Contact me!">
			</div>
			<div class="col-md-6 col-sm-12">
				<form id="contact-me-form" action="\contact" method="POST" >
					<!--Show alert if it exists-->
					<% if (typeof alertClass != "undefined") { %>
						<div class="alert fade in <%=alertClass%>">
					  		<strong><%=alertTitle%></strong> <%=alertMessage%>
					  		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	  							<span aria-hidden="true">&times;</span>
							</button>
						</div>
					<% } %>

					<h3>
						Contact Me!
						<div class="social-media">
							<a class="btn btn-social-icon btn-github" href="https://github.com/dnewberr/"><span class="fa fa-github"></span></a>
							<a class="btn btn-social-icon btn-linkedin" href="https://www.linkedin.com/in/deborah-newberry-b9b63089/"><span class="fa fa-linkedin"></span></a>
						</div>
					</h3>
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" class="form-control" name="name" placeholder="Name" required="required" id="name">
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input type="email" class="form-control" name="email" placeholder="Email" required="required" id="email">
					</div>

					<div class="form-group">
						<label for="message">Message</label>
						<textarea class="form-control" rows="10" name="message" required="required" id="message"></textarea>
					</div>
					<div class="form-group">
						<!--<button disabled class="btn btn-primary" type=button id="btnverzenden2" style="display: none"><span class="glyphicon glyphicon-refresh"></span> Sending mail</button>-->
						<button id="send-email" class="btn btn-primary btn-lg" onsubmit="myButtonValue.disabled = true; return true;">Send</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
	<script src="./contact.js" type="text/javascript"></script>
	<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="./stylesheets/bootstrap-social.css">
	<link rel="stylesheet" type="text/css" href="./stylesheets/contact.css">
